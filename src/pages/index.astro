    /* Colors */
    --white0: #ffffff;
    --white1: #eeeeee;
    --white2: #dddddd;
    --black0: #000000;
    --black1: #111111;
    --black2: #222222;
    --grey0: #999999;
    --grey1: #666666;
    --primary: #ba5230;
    --primary-dark: #8c2e0f;

---
import "@fontsource-variable/montserrat";
import ActionButton from "../components/actionButton.astro";
import PlanCard from "../components/planCard.astro";
import PrimaryButton from "../components/primaryButton.astro";
import ProcessCard from "../components/processCard.astro";
import ReasonCard from "../components/reasonCard.astro";
import ServiceCard from "../components/serviceCard.astro";
import TestimonialCard from "../components/testimonialCard.astro";
import TrustStat from "../components/trustStat.astro";
import arrow from "../images/Arrow.png";
import mail from "../images/Mail.png";
import phone from "../images/Phone.png";
import menu from "../images/Menu.png";
import brandLogo from "../images/Logo.png";
import brandName from "../images/BrandName.png";
import stripStar from "../images/StripStar.png";
import github from "../images/Github.png";
import linkedin from "../images/LinkedIn.webp";
import upwork from "../images/Upwork.webp";
import fiverr from "../images/Fiverr.png";
import expIcon from "../images/ExpIcon.png";
import proIcon from "../images/ProIcon.png";
import affIcon from "../images/AffIcon.png";
import connectIcon from "../images/ConnectIcon.png";
import commitIcon from "../images/CommitIcon.png";
import createIcon from "../images/CreateIcon.png";
import closeIcon from "../images/CloseIcon.png";
import websiteIcon from "../images/WebsiteIcon.png";
import appIcon from "../images/AppIcon.png";
import uiuxIcon from "../images/UiUxIcon.png";
import productIcon from "../images/ProductIcon.png";
import pmBG from "../images/PM_BG.png";
import fwBG from "../images/FW_BG.png";
import etBG from "../images/ET_BG.png";
import gjBG from "../images/GJ_BG.png";
import cmBG from "../images/CM_BG.png";
import person1 from "../images/person1.jpeg";
import person2 from "../images/person2.jpeg";
import person3 from "../images/person3.jpeg";
import landingFrame from "../images/LandingFrame.png";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Launch your business on its digital journey with NaFu apps in Agra, UP, India - Mobile App, Website, UI/UX, Product Consulting"
    />
    <meta
      name="keywords"
      content="Mobile App, Website, UI/UX, Product Consulting, E-Commerce, B2B SaaS, Graphic Design, Logo, Branding, Agra, UP, Uttar Pradesh, India "
    />
    <title>NaFu Apps - Website & App Development Agency</title>
  </head>
  <body>
    <div class="main-content" id="main">
      <div class="main-header">
        <div
          class="header-left"
          onclick="document.getElementById('main').scrollIntoView()"
        >
          <img src={brandLogo.src} alt="NaFu Apps Logo" class="brandLogo" />
          <img
            src={brandName.src}
            alt="NaFu Apps Brand Name"
            class="brandName"
          />
        </div>
        <div class="header-right hide-menu" id="menu-list">
          <span
            class="nav-item"
            onclick="document.getElementById('about').scrollIntoView()"
            >ABOUT US</span
          >
          <span
            class="nav-item"
            onclick="document.getElementById('services').scrollIntoView()"
            >SERVICES</span
          >
          <span
            class="nav-item"
            onclick="document.getElementById('pricing').scrollIntoView()"
            >PRICING</span
          >
          <span
            class="nav-item"
            onclick="document.getElementById('process').scrollIntoView()"
            >PROCESS</span
          >
          <span
            class="nav-item"
            onclick="document.getElementById('works').scrollIntoView()"
            >WORKS</span
          >
        </div>
        <div class="header-menu" id="menu-button">
          <img src={menu.src} alt="Navigation Menu" class="nav-menu" />
        </div>
      </div>
      <div class="main-sections">
        <div class="section" id="landing">
          <div class="landing-title">
            <span class="hero-text">Want to take your business online..</span>
            <span class="hero-text">but don't know where to start?</span>
            <span class="hero-text" id="text-pop">We will help you.</span>
          </div>
          <img id="landingImg" src={landingFrame.src} alt="Landing Image" />
          <!-- <div class="landing-break"></div> -->
          <div class="landing-title">
            <span class="hero-subtext"
              >NaFu Apps is a freelance web development agency which launches
              your business onto its digital journey</span
            >
            <span class="hero-subtext" id="subtext-pop">blazingly fast...</span>
          </div>
          <div class="landing-cta">
            <PrimaryButton
              text="Connect Now"
              linkUrl="document.getElementById('contact').scrollIntoView()"
            />
            <ActionButton
              text="Discover More"
              iconUrl={arrow.src}
              linkUrl="#about"
            />
          </div>
          <div class="landing-strip">
            <img class="strip-star" src={stripStar.src} alt="Star Icon" />
            <span class="strip-text">MOBILE APP</span>
            <img class="strip-star" src={stripStar.src} alt="Star Icon" />
            <span class="strip-text">WEBSITE</span>
            <img class="strip-star" src={stripStar.src} alt="Star Icon" />
            <span class="strip-text">UI/UX DESIGN</span>
            <img class="strip-star" src={stripStar.src} alt="Star Icon" />
            <span class="strip-text hide-strip">CONSULTING</span>
            <img
              class="strip-star hide-strip"
              src={stripStar.src}
              alt="Star Icon"
            />
          </div>
        </div>
        <div class="section" id="about">
          <span class="section-header">ABOUT US</span>
          <span class="section-title">
            We enable Indian entrepreneurs to achieve their lifelong dreams by
            providing <span id="about-pop">high-quality IT solutions.</span>
          </span>
          <div class="about-content">
            <div class="about-reasons">
              <ReasonCard
                header="EXPERIENCED"
                subtitle="We are a dedicated team of developers, designers & product managers from Tier-1 colleges who have worked at some of the biggest startups in India"
                reasonUrl={expIcon.src}
              />
              <ReasonCard
                header="AFFORDABLE"
                subtitle="We know it is difficult to start a business and the initial phases are the most crucial part of the journey. That’s why we provide the most affordable services in the market"
                reasonUrl={affIcon.src}
              />
              <ReasonCard
                header="PROFESSIONAL"
                subtitle="We believe mutual trust comes from transparency. And that’s why our core values are based on honesty, empathy, punctuality and professionalism."
                reasonUrl={proIcon.src}
              />
            </div>
            <div class="about-testimonials">
              <TestimonialCard
                header="Very approachable, simple and value for money branding service.. Loved it!"
                subtitle1="VRITI SHARMA, DELHI"
                subtitle2="Beauty Parlor Manager"
                avatarUrl={person1.src}
              />
              <TestimonialCard
                header="I asked Nafu apps to make a website for my shop.. now more customers are visiting."
                subtitle1="JAGRIT KUMAR, AGRA"
                subtitle2="Supermarket Owner"
                avatarUrl={person2.src}
              />
              <TestimonialCard
                header="They built an app for my startup in 2 months. Works perfect, no bugs and awesome customer support."
                subtitle1="AASHISH P, BENGALURU"
                subtitle2="Healthcare Startup Founder"
                avatarUrl={person3.src}
              />
            </div>
          </div>
          <div class="about-stats">
            <TrustStat header="13+" subtitle="Yrs of Experience" />
            <TrustStat header="25+" subtitle="Happy Clients" />
            <TrustStat header="4.8" subtitle="Star Rating" />
            <TrustStat header="10+" subtitle="Cities Served" />
          </div>
        </div>
        <div class="section" id="services">
          <span class="section-header">OUR SERVICES</span>
          <span class="section-title">
            We provide a <span id="services-pop"
              >wide range of digital services</span
            > to help your business setup its online presence.
          </span>
          <div class="services-content">
            <ServiceCard
              iconUrl={websiteIcon.src}
              header="WEBSITE DEVELOPMENT"
              subtitle="Create amazing professional websites to quickly showcase your business online"
              tags={["Portfolio", "Online Shop", "Blog"]}
              numberStars={4}
            />
            <ServiceCard
              iconUrl={appIcon.src}
              header="MOBILE & WEB APP DEVELOPMENT"
              subtitle="Build scalable mobile and web applications to interact with your customers"
              tags={["Startup MVP Apps", "B2B SaaS", "E-Commerce"]}
              numberStars={5}
            />
            <ServiceCard
              iconUrl={uiuxIcon.src}
              header="UI/UX DESIGN & BRANDING"
              subtitle="Enhance user experience with visually appealing digital assets for your brand"
              tags={["Graphic Design", "Design System", "Branding", "Logo"]}
              numberStars={4}
            />
            <ServiceCard
              iconUrl={productIcon.src}
              header="PRODUCT CONSULTING"
              subtitle="Accelerate execution of your product roadmap to achieve user-centric results"
              tags={["Product Management", "Strategy", "Consulting"]}
              numberStars={5}
            />
          </div>
        </div>
        <div class="section" id="pricing">
          <span class="section-header">OUR PRICING</span>
          <span class="section-title"
            >We offer <span id="pricing-pop">affordable service packages</span> to
            match all your business needs... big or small.</span
          >
          <div class="pricing-plans">
            <PlanCard
              header="BASIC"
              slashedPrice="29,999"
              price="9,999/-"
              timeline="For a small 1 - 2 week project"
              bestTags={[
                "Simple website (up to 3 pages)",
                "Mini branding (logo, poster, etc.)",
                "Part-time product consulting",
              ]}
              includeList={[
                "1 month post handover support",
                "Responsive design",
              ]}
              popularTag={false}
            />
            <PlanCard
              header="STANDARD"
              slashedPrice="149,999"
              price="49,999/-"
              timeline="For a medium 1 - 2 month project"
              bestTags={[
                "Simple mobile/web app",
                "Full scale branding",
                "Managing feature development",
              ]}
              includeList={[
                "3 month post handover support",
                "1 round of requirement change",
              ]}
              popularTag={true}
            />
            <PlanCard
              header="PREMIUM"
              slashedPrice="4,99,999"
              price="1,49,999/-"
              timeline="For a big 4 - 6 month project"
              bestTags={[
                "Large scale mobile/web app",
                "B2B SaaS application",
                "Managing entire product cycle",
              ]}
              includeList={[
                "6 month post handover support",
                "2 rounds of requirement change",
                "24x7 availability for client sync-up",
              ]}
              popularTag={false}
            />
          </div>
          <ol class="pricing-footer">
            <li class="pricing-footer-text">
              Our prices are fixed and non-negotiable. We do, however, provide
              10% additional discount for social service sectors like education,
              healthcare, NGO, etc.
            </li>
            <li class="pricing-footer-text">
              Post launch support does not include extra feature development or
              requirement changes. It includes only code review, bug fixes and
              testing of existing project deliverables.
            </li>
            <li class="pricing-footer-text">
              We also provide additional support for project maintenance (after
              a plan has completed) at a nominal price of 3,000/- per month or
              30,000/- per year billed separately.
            </li>
            <li class="pricing-footer-text">
              All payments are to be made via UPI or Net banking. We don't
              accept cash or cards.
            </li>
            <li class="pricing-footer-text">
              Not sure which plan is right for you? Connect with us and we will
              help you choose the best one.
            </li>
          </ol>
        </div>
        <div class="section" id="process">
          <span class="section-header">OUR PROCESS</span>
          <span class="section-title"
            >We follow a <span id="process-pop">simple transaction system</span>
            that works great for both the parties involved - you and us.</span
          >
          <div class="process-content">
            <ProcessCard
              title="Connect"
              iconUrl={connectIcon.src}
              subtitle="Initial discovery call to gather requirements and discuss project goals, budget and timelines"
              outcomeText=" Draft proposal & rough estimate"
              paymentTag="Free of charge"
              step={1}
            />
            <ProcessCard
              title="Commit"
              iconUrl={commitIcon.src}
              subtitle="Detailed discussion to freeze project deliverables and signing of contract to start the work"
              outcomeText="Legal agreement & project kick-off"
              paymentTag="10% advance payment"
              step={2}
            />
            <ProcessCard
              title="Create"
              iconUrl={createIcon.src}
              subtitle="Build consistently, iterate quickly and frequently communicate with the client to review progress"
              outcomeText="Regular status updates & feedback"
              paymentTag="40% mid-way payment"
              step={3}
            />
            <ProcessCard
              title="Close"
              iconUrl={closeIcon.src}
              subtitle="Deliver completed project files with a live demo and provide post launch support"
              outcomeText="Project launch & final handover"
              paymentTag="50% final payment"
              step={4}
            />
          </div>
        </div>
        <div class="section" id="works">
          <span class="section-header">OUR WORKS</span>
          <span class="section-title"
            >We are not that big yet but we have partnered with many amazing
            clients to <span id="works-pop">create some awesome stuff.</span>
          </span>
          <div class="works-content">
            <img class="work-card" src={pmBG.src} alt="PM Work" />
            <img class="work-card" src={etBG.src} alt="ET Work" />
            <img class="work-card" src={fwBG.src} alt="FW Work" />
            <img class="work-card" src={gjBG.src} alt="GJ Work" />
            <img class="work-card" src={cmBG.src} alt="CM Work" />
          </div>
        </div>
        <div class="section" id="contact">
          <span class="section-header">CONTACT US</span>
          <span class="section-title"
            >Interested in building something great with us?
          </span>
          <span class="section-title" id="contact-pop">Let's connect!</span>
          <div class="contact-cta">
            <ActionButton
              text="nafuapps@gmail.com"
              iconUrl={mail.src}
              linkUrl="mailto:nafuapps@gmail.com"
            />
            <ActionButton
              text="91-9840774089"
              iconUrl={phone.src}
              linkUrl="tel:91-9840774089"
            />
          </div>
          <div class="contact-social">
            <a
              class="social-cta"
              href="https://github.com/nafuapps/"
              target="_blank"
            >
              <img src={github.src} alt="Social Icon 1" class="social-icon" />
            </a>
            <a
              class="social-cta"
              href="https://www.linkedin.com/company/nafu-apps"
              target="_blank"
            >
              <img src={linkedin.src} alt="Social Icon 2" class="social-icon" />
            </a>
            <a
              class="social-cta"
              href="https://www.upwork.com/freelancers/~014bdb8d62716ae492"
              target="_blank"
            >
              <img src={upwork.src} alt="Social Icon 3" class="social-icon" />
            </a>
            <a
              class="social-cta"
              href="https://www.fiverr.com/users/nafuapps"
              target="_blank"
            >
              <img src={fiverr.src} alt="Social Icon 4" class="social-icon" />
            </a>
          </div>
          <div class="contact-footer"></div>
        </div>
      </div>
    </div>
  </body>
</html>

<script>
  const menuList = document.getElementById("menu-list");
  const menuButton = document.getElementById("menu-button");

  //Menu Button hide and show toggle
  menuButton?.addEventListener("click", () => {
    menuList?.classList.toggle("hide-menu");
  });
  //Clicking menu item hides the menu
  menuList?.addEventListener("click", () => {
    menuList.classList.add("hide-menu");
  });
  //clicking outside the menu hides the menu
  document.addEventListener("click", (event) => {
    if (
      !menuButton?.contains(event.target as Node) &&
      !menuList?.contains(event.target as Node)
    ) {
      menuList?.classList.add("hide-menu");
    }
  });
</script>

<style>
